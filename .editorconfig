root = true

[*.{kt,kts,java,gradle}]
charset=utf-8
insert_final_newline=true
max_line_length=120

[*.{kt,kts}]
ij_kotlin_code_style_defaults = kotlin_official
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

[*.md]
indent_style = space
trim_trailing_whitespace = false
